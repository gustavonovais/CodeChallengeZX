<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_product_bottom_top">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/margin_product_item">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/product_img"
            android:layout_width="@dimen/img_product"
            android:layout_height="@dimen/img_product"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="@dimen/margin_product" />


        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_below="@id/product_img"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/margin_product_bottom_top"
            android:layout_toRightOf="@id/product_img" />

        <TextView
            android:id="@+id/text_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_title"
            android:layout_toRightOf="@id/product_img" />

        <TextView
            android:id="@+id/text_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_price"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/margin_product_bottom_top"
            android:layout_toRightOf="@id/product_img" />

    </RelativeLayout>


</android.support.v7.widget.CardView>
